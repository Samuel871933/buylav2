{
  "name": "buyla",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter @buyla/api --filter @buyla/web dev",
    "dev:web": "pnpm --filter @buyla/web dev",
    "dev:api": "pnpm --filter @buyla/api dev",
    "build": "pnpm --filter @buyla/web build",
    "build:api": "pnpm --filter @buyla/api build",
    "test": "pnpm --filter @buyla/shared --filter @buyla/api test",
    "lint": "pnpm -r lint",
    "db:migrate": "pnpm --filter @buyla/db migrate",
    "db:seed": "pnpm --filter @buyla/db seed",
    "db:fixtures": "pnpm --filter @buyla/db fixtures"
  },
  "engines": {
    "node": ">=18"
  }
}
